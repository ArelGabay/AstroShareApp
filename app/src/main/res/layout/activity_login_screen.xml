<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.LoginScreen">

    <TextView
        android:id="@+id/login_screen_text_view_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="347dp" />

    <EditText
        android:id="@+id/login_screen_edit_text_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Enter Username"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="333dp" />

    <TextView
        android:id="@+id/login_screen_text_view_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="420dp" />

    <EditText
        android:id="@+id/login_screen_edit_text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Enter Password"
        app:layout_constraintBaseline_toBaselineOf="@+id/login_screen_text_view_password"
        tools:layout_editor_absoluteX="143dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="485dp" />
</androidx.constraintlayout.widget.ConstraintLayout>